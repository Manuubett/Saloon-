<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

const firebaseConfig = {
  apiKey: "AIzaSyBEBhUCFRstyVsZYZ2q6x-SjQZht05dodM",
  authDomain: "video-ed5e4.firebaseapp.com",
  projectId: "video-ed5e4"
};

const app = initializeApp(firebaseConfig);
const db = getFirestore(app);
let allMedia = [];

/* PIN LOGIC */
const lockScreen = document.getElementById('lockScreen');
const resetScreen = document.getElementById('resetScreen');
const content = document.getElementById('content');
const pinInput = document.getElementById('pinInput');
const logoutBtn = document.getElementById('logoutBtn');

const savedPin = localStorage.getItem("accessPIN");

// Always show lock screen on page load
lockScreen.style.display = "flex";
content.style.display = "none";

window.unlock = () => {
  const val = pinInput.value.trim();
  if (val.length !== 4 || !/^\d{4}$/.test(val)) {
    alert("Please enter a valid 4-digit PIN (numbers only)");
    return;
  }
  
  if (!savedPin) {
    // First time setup - set PIN
    localStorage.setItem("accessPIN", val);
    location.reload();
  } else if (val === savedPin) {
    lockScreen.style.display = "none";
    content.style.display = "block";
    logoutBtn.style.display = "block";
    loadMedia();
  } else {
    alert("Incorrect PIN. Please try again.");
    pinInput.value = "";
    pinInput.focus();
  }
};

// Enter key support for PIN input
pinInput.addEventListener('keypress', (e) => {
  if (e.key === 'Enter') unlock();
});

window.showReset = () => {
  lockScreen.style.display = "none";
  resetScreen.style.display = "flex";
  document.getElementById('oldPin').focus();
};

window.resetPin = () => {
  const old = document.getElementById('oldPin').value;
  const neu = document.getElementById('newPin').value;
  
  if (old.length !== 4 || neu.length !== 4) {
    alert("Both PINs must be 4 digits");
    return;
  }
  
  if (old === savedPin) {
    localStorage.setItem("accessPIN", neu);
    alert("PIN updated successfully!");
    location.reload();
  } else {
    alert("Invalid old PIN");
    document.getElementById('oldPin').value = "";
    document.getElementById('oldPin').focus();
  }
};

/* AUTO-LOCK WHEN LEAVING / HIDING PAGE */
const LOCK_FLAG_KEY = "mediaHub_shouldLockOnVisible";

document.addEventListener("visibilitychange", () => {
  if (document.visibilityState === "hidden") {
    sessionStorage.setItem(LOCK_FLAG_KEY, "true");
  }
});

function checkShouldLock() {
  if (sessionStorage.getItem(LOCK_FLAG_KEY) === "true" && savedPin) {
    lockScreen.style.display = "flex";
    content.style.display = "none";
    logoutBtn.style.display = "none";
    pinInput.value = "";
    sessionStorage.removeItem(LOCK_FLAG_KEY);
  }
}

window.addEventListener("pageshow", checkShouldLock);
checkShouldLock();

/* LOGOUT FUNCTIONALITY */
logoutBtn.addEventListener('click', () => {
  if (confirm("Are you sure you want to logout?")) {
    sessionStorage.setItem(LOCK_FLAG_KEY, "true");
    lockScreen.style.display = "flex";
    content.style.display = "none";
    logoutBtn.style.display = "none";
    pinInput.value = "";
  }
});

/* LOAD MEDIA */
async function loadMedia() {
  const grid = document.getElementById('mediaGrid');
  
  try {
    const snap = await getDocs(collection(db, "videos"));
    allMedia = snap.docs.map(doc => ({ id: doc.id, ...doc.data() }));
    
    // Add fallback for missing properties
    allMedia = allMedia.map(item => ({
      ...item,
      type: item.type || 'image',
      title: item.title || 'Untitled',
      category: item.category || 'A',
      // Ensure coverImageUrl exists, fallback to imageUrl or thumbnail
      coverImageUrl: item.coverImageUrl || item.imageUrl || item.thumbnailUrl || ''
    }));
    
    render(allMedia);
  } catch (e) {
    console.error("Firestore error:", e);
    grid.innerHTML = `
      <div style="text-align:center; color:#dc3545; grid-column:1/-1; padding:40px;">
        <i class="fas fa-exclamation-triangle" style="font-size:2em; margin-bottom:10px;"></i>
        <h3>Connection Error</h3>
        <p>Could not load media. Please check your connection.</p>
        <button onclick="location.reload()" style="padding:10px 20px; background:#007bff; color:white; border:none; border-radius:5px; cursor:pointer;">
          Retry
        </button>
      </div>
    `;
  }
}

function render(list) {
  const grid = document.getElementById('mediaGrid');
  grid.innerHTML = "";

  if (!list.length) {
    grid.innerHTML = `
      <div style="text-align:center; color:#777; grid-column:1/-1; padding:40px;">
        <i class="fas fa-inbox" style="font-size:3em; opacity:0.5; margin-bottom:20px;"></i>
        <h3>No Media Found</h3>
        <p>Upload some media to get started!</p>
      </div>
    `;
    return;
  }

  list.forEach(m => {
    const card = document.createElement('div');
    card.className = 'card';
    
    // Determine the image to display
    let displayImage;
    if (m.type === 'video') {
      // For videos: Use coverImageUrl first, then fallback to imageUrl/thumbnail
      displayImage = m.coverImageUrl || m.imageUrl || 'https://via.placeholder.com/200x140?text=Video+Cover';
    } else {
      // For images: Use imageUrl or coverImageUrl
      displayImage = m.imageUrl || m.coverImageUrl || 'https://via.placeholder.com/200x140?text=Image';
    }
    
    const icon = m.type === 'video' ? 'fa-video' : 'fa-image';
    const category = m.category ? `<span style="float:right; background:#e9ecef; padding:2px 8px; border-radius:10px; font-size:11px;">${m.category}</span>` : '';
    
    card.innerHTML = `
      <div class="card-image-container">
        <img src="${displayImage}" alt="${m.title || 'Media'}" loading="lazy" 
             onerror="this.src='https://via.placeholder.com/200x140?text=No+Preview'">
        ${m.type === 'video' ? '<div class="video-overlay"><i class="fas fa-play-circle"></i></div>' : ''}
      </div>
      <div class="info">
        <i class="fas ${icon}"></i> ${m.title || 'Untitled'}
        ${category}
      </div>
    `;
    card.onclick = () => openMedia(m);
    grid.appendChild(card);
  });
}

function openMedia(m) {
  const modal = document.getElementById('mediaModal');
  const videoEl = document.getElementById('modalVideo');
  const imgEl = document.getElementById('modalImage');
  const titleEl = document.getElementById('modalTitle');

  videoEl.style.display = 'none'; 
  imgEl.style.display = 'none';
  videoEl.pause(); 
  videoEl.src = '';

  const mainUrl = m.url || m.videoUrl || m.imageUrl;
  if (!mainUrl) {
    alert("No playable URL found for this media");
    return;
  }

  titleEl.textContent = m.title || 'Untitled';

  if (m.type === 'video') { 
    videoEl.src = mainUrl; 
    videoEl.style.display = 'block'; 
    videoEl.play().catch(e => console.log("Autoplay prevented:", e)); 
  } else { 
    imgEl.src = mainUrl; 
    imgEl.style.display = 'block'; 
  }

  modal.style.display = 'flex';
  
  // Add keyboard navigation for modal
  document.addEventListener('keydown', handleModalKeydown);
}

function handleModalKeydown(e) {
  if (e.key === 'Escape') closeModal();
}

window.closeModal = () => {
  const modal = document.getElementById('mediaModal');
  const video = document.getElementById('modalVideo');
  video.pause(); 
  video.src = '';
  modal.style.display = 'none';
  document.removeEventListener('keydown', handleModalKeydown);
};

window.filter = function(f) {
  document.querySelectorAll('.filters button').forEach(b => b.classList.remove('active'));
  event.target.classList.add('active');
  
  let filtered = allMedia;
  if (f === 'video' || f === 'image') {
    filtered = allMedia.filter(x => x.type === f);
  } else if (f !== 'all') {
    filtered = allMedia.filter(x => x.category === f);
  }
  
  render(filtered);
};

// Initialize PIN input focus
if (lockScreen.style.display === 'flex') {
  setTimeout(() => pinInput.focus(), 100);
}
</script>

